name: Deploy with OIDC

on:
  push:
    branches: [ main ]

permissions:
  id-token: write     # ðŸ‘ˆ Required for OIDC
  contents: read

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Configure AWS credentials via OIDC
        uses: aws-actions/configure-aws-credentials@v2
        with:
          role-to-assume: arn:aws:iam::989483679457:role/ECR-Access-to-GIT
          role-session-name: github-actions
          aws-region: ap-southeast-1

      - name: Deploy CloudFormation stack
        uses: aws-actions/aws-cloudformation-github-deploy@v1
        with:
          name: my-stack
          template: ./RDSVPCTFinal.yaml
          capabilities: CAPABILITY_IAM
          parameter-overrides: |
            VPC CIDR=10.0.1.0/24
            RDS StorageEncryptionKey=aws/rds
            DBInstanceType=db.t3.micro
            AutomaticBackupRetention=7
